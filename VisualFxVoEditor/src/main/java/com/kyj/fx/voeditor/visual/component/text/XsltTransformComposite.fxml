<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="775.0" prefWidth="837.0" styleClass="root-container"
	type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<SplitPane dividerPositions="0.5" orientation="VERTICAL"
			prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
			<items>
				<SplitPane dividerPositions="0.5" prefHeight="160.0"
					prefWidth="200.0">
					<items>
						<VBox>
							<children>
								<Label text="XML Data" />
								<StackPane fx:id="spXmlData" prefHeight="150.0"
									prefWidth="200.0" VBox.vgrow="ALWAYS" />
							</children>
						</VBox>
						<VBox>
							<children>
								<Label text="XSLT Data" />
								<StackPane fx:id="spXlstData" prefHeight="150.0"
									prefWidth="200.0" VBox.vgrow="ALWAYS" />
							</children>
						</VBox>
					</items>
				</SplitPane>
				<VBox>
					<children>
						<HBox>
							<children>
								<Label text="Result" />
							</children>
						</HBox>
						<StackPane fx:id="spTransfromResult" prefHeight="150.0"
							prefWidth="200.0" VBox.vgrow="ALWAYS" />
					</children>
				</VBox>
			</items>
		</SplitPane>
	</center>
	<top>
		<VBox BorderPane.alignment="CENTER">
			<children>
				<MenuBar>
					<menus>
						<Menu mnemonicParsing="false" text="File">
							<items>
								<Menu mnemonicParsing="false" text="Save As...">
									<items>
										<MenuItem mnemonicParsing="false" text="Save As Templtes"
											onAction="#miSaveAsTemplates" />
										<MenuItem mnemonicParsing="false" text="Save As ResultXML"
											onAction="#miSaveResultXmlOnAction" />
									</items>
								</Menu>

								<Menu mnemonicParsing="false" text="Open...">
									<MenuItem mnemonicParsing="false" text="Open Templtes"
										onAction="#miOpenTemplates" />
									<MenuItem mnemonicParsing="false" text="Open ResultXML"
										onAction="#miSaveResultXmlOnAction" />
								</Menu>
							</items>
						</Menu>
						<Menu mnemonicParsing="false" text="Help">
							<items>
								<MenuItem mnemonicParsing="false" onAction="#miShowSampleDataOnAction"
									text="Show Sample Data" />
							</items>
						</Menu>
					</menus>
				</MenuBar>
				<HBox alignment="CENTER_RIGHT" styleClass="button-area">
					<children>
						<Button fx:id="btnConvert" mnemonicParsing="false"
							onAction="#btnConvertOnAction" text="Convert" />
					</children>
				</HBox>
			</children>
		</VBox>
	</top>
</fx:root>
