<?xml version="1.0" encoding="UTF-8"?>

<?import com.kyj.fx.voeditor.visual.component.NumberTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="240.0" prefWidth="412.0" style="-fx-padding: 5px;" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane BorderPane.alignment="TOP_LEFT">
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-padding: 0px 20px 0px 20px;">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" style="-fx-padding: 0px 15px 0px 15px; -fx-spacing: 10px;">
                     <children>
                        <Label style="-fx-pref-width: 80;" text="Revision" />
                        <NumberTextField fx:id="txtRevision" prefHeight="23.0" prefWidth="103.0" style="-fx-pref-width: 180;" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" style="-fx-padding: 0px 15px 0px 15px; -fx-spacing: 10px;">
                     <children>
                        <Label style="-fx-pref-width: 80;" text="Author" />
                        <TextField fx:id="txtAuthor" style="-fx-pref-width: 180; -fx-background-color: #ECECEC; -fx-border-color: #CFCFCF; -fx-border-radius: 5px;" text="asdasd" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TextArea fx:id="txtMessage" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </bottom>
      </BorderPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" style="-fx-padding: 5px;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#btnSaveOnAction" style="-fx-pref-width: 80;" text="Save" />
         </children>
      </HBox>
   </bottom>
</fx:root>
