<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="670.0" prefWidth="906.0" styleClass="borderpane-root" stylesheets="@FilesAnalysisComposite.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
	<top>
		<HBox styleClass="hbox-item-container" BorderPane.alignment="CENTER">
			<children>
				<TextField id="txtFileLocation" fx:id="txtFileLocation" onMouseClicked="#txtFileLocationOnMouseClick" prefHeight="23.0" prefWidth="472.0" HBox.hgrow="ALWAYS" />
				<Button id="button" mnemonicParsing="false" onAction="#btnSearchOnAction" text="Search" />
			</children>
		</HBox>
	</top>
	<center>
		<SplitPane dividerPositions="0.5" BorderPane.alignment="CENTER">
			<items>
				<VBox styleClass="vbox-item-container">
					<children>
						<Label text="File Tree" />
						<TreeView fx:id="tvFiles" onMouseClicked="#tvFilesOnClick" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
					</children>
				</VBox>
				<VBox styleClass="vbox-item-container">
					<children>
                  <VBox>
                     <children>
      						<Label text="Files" />
                        <HBox styleClass="hbox-item-container">
                           <children>
                              <TextField fx:id="txtNameFilter" HBox.hgrow="ALWAYS" onKeyPressed="#txtNameFilterOnKeyPress"/>
                              <Button mnemonicParsing="false" onAction="#nameFilterOnAction" text="Name Filter" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
						<TableView fx:id="tbFiles" onMouseClicked="#tbFilesOnMouseClick" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
							<columns>
								<TableColumn fx:id="colFileName" prefWidth="417.0" text="File Name" />
							</columns>
						</TableView>
					</children>
				</VBox>
			</items>
		</SplitPane>
	</center>
</fx:root>
