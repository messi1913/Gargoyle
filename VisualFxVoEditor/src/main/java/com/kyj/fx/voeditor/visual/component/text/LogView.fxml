<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="336.0" prefWidth="595.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kyj.fx.voeditor.visual.component.text.LogViewController">
   <center>
      <TextArea fx:id="txtLog" />
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Save As" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
                  <Menu mnemonicParsing="false" text="Encoding">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" selected="true" text="UTF-8">
                           <toggleGroup>
                              <ToggleGroup fx:id="ENCODING" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem mnemonicParsing="false" text="EUC-KR" toggleGroup="$ENCODING" />
                    </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" text="Clear" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
